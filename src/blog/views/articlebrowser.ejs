<!DOCTYPE html>
<html lang="de" class="dark motion-safe:scroll-smooth">
	<head>
		<%- include('../partials/head') %>
		<title><%- htmlTitle %></title>
	</head>
	<body>
		<%- include('../partials/navigation') %>
		<div class="px-4 mx-auto text-lg max-w-[75ch]">
			<h1 class="text-4xl border-b border-gray-600 mb-4 pb-3"><%- pageTitle %></h1>
			<ul>
				<% for (let article of allArticles) { %>
					<li class="list-disc">
						<a href="/a/<%- article.url_id %>">
							<span class="text-blue-600 dark:text-blue-400 hover:decoration-blue-600 dark:hover:decoration-blue-400 hover:underline font-bold">
								<%- article.current_revision.content.title %>
							</span>
							vom <%- moment(article.original_publication_time).format('DD.MM.YYYY, hh:mmZ')%> Uhr<br>
							<%- article.current_revision.content.blurb %>
						</a>
					</li>
				<% } %>
			</ul>
		</div>
		<%- include('../partials/footer') %>
	</body>
</html>

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "before 6am"
  ],
  "timezone": "Europe/Berlin",
  "automergeType": "branch",
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "lint",
        "prettier",
        "jest"
      ],
      "automerge": true
    }
  ]
}

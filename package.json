{
	"name": "express-blog",
	"version": "1.0.0",
	"description": "",
	"main": "dist/main.js",
	"scripts": {
		"clean": "rimraf dist/*",
		"copy-assets": "ts-node tools/copyAssets",
		"lint": "eslint src/",
		"test": "NODE_ENV=test jest",
		"tsc": "tsc",
		"build": "npm-run-all clean lint tsc tailwind copy-assets webpack",
		"start": "export NODE_ENV=production; node .",
		"tailwind": "tailwindcss -i ./main.css -o ./dist/public/styles.css --minify",
		"webpack": "webpack-cli --devtool source-map",
		"dev:serve": "NODE_ENV=development nodemon --watch src -e ts --exec ts-node src/server",
		"dev:assets": "nodemon --watch src/public --exec ts-node tools/copyAssets",
		"dev:js-webpack": "webpack-cli --devtool eval-source-map --watch",
		"dev:tailwind": "tailwindcss -i ./main.css -o ./dist/public/styles.css --watch",
		"dev": "npm-run-all --parallel dev:serve dev:js-webpack dev:tailwind dev:assets"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"cheerio": "^1.0.0-rc.10",
		"dotenv": "^16.0.0",
		"ejs": "^3.1.6",
		"express": "^4.17.3",
		"helmet": "^5.0.2",
		"heroicons": "^1.0.6",
		"moment": "^2.29.3",
		"mysql2": "^2.3.3",
		"npm-run-all": "^4.1.5",
		"pureimage": "^0.3.8",
		"sequelize": "^6.17.0",
		"showdown": "^2.1.0",
		"winston": "^3.6.0"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.2",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.5.0",
		"@types/node": "^16.11.26",
		"@types/shelljs": "^0.8.11",
		"@types/showdown": "^2.0.0",
		"@types/tailwindcss": "^3.0.9",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"eslint-config-google": "^0.14.0",
		"highlight.js": "^11.5.1",
		"jest": "^28.0.3",
		"nodemon": "^2.0.15",
		"rimraf": "^3.0.2",
		"shelljs": "^0.8.5",
		"sqlite3": "^4.2.0",
		"tailwind-highlightjs": "^2.0.0",
		"tailwindcss": "^3.0.23",
		"ts-jest": "^28.0.1",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.2",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2",
		"workbox-cacheable-response": "^6.5.3",
		"workbox-expiration": "^6.5.3",
		"workbox-routing": "^6.5.3",
		"workbox-strategies": "^6.5.3"
	}
}
